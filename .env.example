# Docker Environment Variables Template
# Copy this file to .env and replace placeholder values with your actual configuration
# IMPORTANT: Change all passwords before deployment!
# WARNING: Never commit .env to version control - it's already in .gitignore

# ============================================================================
# MySQL Database Configuration
# ============================================================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=messages_db
MYSQL_USER=app_user
MYSQL_PASSWORD=your_secure_app_password_here

# ============================================================================
# Spring Boot Data Source Configuration
# Note: Use 'mysql' as hostname (Docker Compose service name)
# ============================================================================
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/messages_db
SPRING_DATASOURCE_USERNAME=app_user
SPRING_DATASOURCE_PASSWORD=your_secure_app_password_here

# ============================================================================
# JPA/Hibernate Configuration
# ============================================================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
